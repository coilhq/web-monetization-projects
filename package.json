{
  "name": "web-monetization",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall_comments": "@types/styled-components brings in types that conflict",
    "postinstall": "lerna bootstrap && rm -rf node_modules/@types/react-native",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --coverage --verbose",
    "prettier": "prettier --write 'packages/*/{src,test}/**/*.ts*'",
    "format": "yarn prettier && YARN_LINT_FIX=1 yarn lint:all --fix --quiet",
    "upkeep": "ts-node -T packages/coil-monorepo-upkeep/upkeep.ts",
    "upkeep:new-package": "ts-node -T packages/coil-monorepo-upkeep/new-package.ts",
    "upkeep:check-updates": "ts-node -T packages/coil-monorepo-upkeep/check-updates.ts",
    "clean:build": "rimraf packages/*/build",
    "build:ts": "tsc --build tsconfig.references.json",
    "build:ts:verbose": "yarn build:ts --verbose",
    "lint:all": "yarn lint 'packages/*/{src,test}/**/*.ts*'",
    "lint:staged": "lint-staged --shell"
  },
  "keywords": [
    "web-monetization",
    "ilp"
  ],
  "author": "Coil Team <info@coil.com>",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.ts*": [
      "prettier --write",
      "YARN_LINT_FIX=1 yarn lint --fix",
      "echo 'git commit --amend --no-edit --no-verify' after review with git diff"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint:staged"
    }
  },
  "resolutions": {
    "@types/webpack": "4.39.5"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.5",
    "@types/puppeteer": "^1.20.2",
    "@types/webpack": "4.39.5",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "2.5.x",
    "@typescript-eslint/parser": "2.5.x",
    "JSON2016": "^1.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-puppeteer": "^4.3.0",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "puppeteer": "^1.20.0",
    "puppeteer-firefox": "^0.5.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.39",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.6.4",
    "webpack": "^4.41",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.9",
    "webpack-command": "^0.5.0",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  }
}
